<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/color_first"
    tools:context="com.awesome.alikhundmiri.curden.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="@drawable/secondcard">

        <TextView
            android:id="@+id/tv_NumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/big_text"
            android:textColor="@color/color_first"
            android:text="Cur-Den" />
    </RelativeLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_first">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_2000"
                android:hint="0"
                android:inputType="number"
                android:ems="1"
                android:layout_weight="1"
                android:textAlignment="center"
                android:lines="1"
                android:maxLines="1"
                android:textColor="@color/color_second"
                android:textSize="@dimen/denomination_text"/>
            <EditText
                android:id="@+id/et_1000"
                android:hint="0"
                android:inputType="number"
                android:layout_weight="1"
                android:ems="1"
                android:textAlignment="center"
                android:lines="1"
                android:maxLines="1"
                android:textColor="@color/color_second"
                android:textSize="@dimen/denomination_text"
                android:text="0" />
            <EditText
                android:id="@+id/et_500"
                android:hint="0"
                android:inputType="number"
                android:ems="1"
                android:layout_weight="1"
                android:textAlignment="center"
                android:lines="1"
                android:maxLines="1"
                android:textColor="@color/color_second"
                android:textSize="@dimen/denomination_text"
                android:text="0" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/Denomination_hint"
                android:layout_weight="1"
                android:text="2000"
                android:textSize="@dimen/demonimation_hint_text"
                android:textAlignment="center"/>
            <TextView
                android:textColor="@color/Denomination_hint"
                android:layout_weight="1"
                android:text="1000"
                android:textSize="@dimen/demonimation_hint_text"
                android:textAlignment="center"/>
            <TextView
                android:textColor="@color/Denomination_hint"
                android:layout_weight="1"
                android:text="500"
                android:textSize="@dimen/demonimation_hint_text"
                android:textAlignment="center"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_100"
                android:hint="0"
                android:inputType="number"
                android:ems="1"
                android:layout_weight="1"
                android:textAlignment="center"
                android:lines="1"
                android:maxLines="1"
                android:textColor="@color/color_second"
                android:textSize="@dimen/denomination_text"
                android:text="0" />
            <EditText
                android:id="@+id/et_50"
                android:hint="0"
                android:inputType="number"
                android:ems="1"
                android:layout_weight="1"
                android:textAlignment="center"
                android:lines="1"
                android:maxLines="1"
                android:textColor="@color/color_second"
                android:textSize="@dimen/denomination_text"
                android:text="0" />
            <EditText
                android:id="@+id/et_20"
                android:hint="0"
                android:inputType="number"
                android:ems="1"
                android:layout_weight="1"
                android:textAlignment="center"
                android:lines="1"
                android:maxLines="1"
                android:textColor="@color/color_second"
                android:textSize="@dimen/denomination_text"
                android:text="0" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/Denomination_hint"
                android:layout_weight="1"
                android:text="100"
                android:textSize="@dimen/demonimation_hint_text"
                android:textAlignment="center"/>
            <TextView
                android:textColor="@color/Denomination_hint"
                android:layout_weight="1"
                android:text="50"
                android:textSize="@dimen/demonimation_hint_text"
                android:textAlignment="center"/>

            <TextView
                android:textColor="@color/Denomination_hint"
                android:layout_weight="1"
                android:text="20"
                android:textSize="@dimen/demonimation_hint_text"
                android:textAlignment="center"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_10"
                android:hint="0"
                android:inputType="number"
                android:ems="1"
                android:layout_weight="1"
                android:textAlignment="center"
                android:lines="1"
                android:maxLines="1"
                android:textColor="@color/color_second"
                android:textSize="@dimen/denomination_text"
                android:text="0" />
            <EditText
                android:id="@+id/et_5"
                android:hint="0"
                android:inputType="number"
                android:ems="1"
                android:layout_weight="1"
                android:textAlignment="center"
                android:lines="1"
                android:maxLines="1"
                android:textColor="@color/color_second"
                android:textSize="@dimen/denomination_text"
                android:text="0" />
            <EditText
                android:id="@+id/et_1"
                android:hint="0"
                android:inputType="number"
                android:ems="1"
                android:layout_weight="1"
                android:textAlignment="center"
                android:lines="1"
                android:maxLines="1"
                android:textColor="@color/color_second"
                android:textSize="@dimen/denomination_text"
                android:text="0" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/Denomination_hint"
                android:layout_weight="1"
                android:text="10"
                android:textSize="@dimen/demonimation_hint_text"
                android:textAlignment="center"/>
            <TextView
                android:textColor="@color/Denomination_hint"
                android:layout_weight="1"
                android:text="5"
                android:textSize="@dimen/demonimation_hint_text"
                android:textAlignment="center"/>

            <TextView
                android:textColor="@color/Denomination_hint"
                android:layout_weight="1"
                android:text="1"
                android:textSize="@dimen/demonimation_hint_text"
                android:textAlignment="center"/>
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/activate_2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/calculate_btn"
        android:text="Calculate"
        android:layout_margin="5dp"
        android:elevation="0dp"
        android:visibility="gone"/>

    <com.google.android.gms.ads.AdView
        android:id="@+id/ad_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id_2" />

</LinearLayout>
